{
  "name": "Kocom Wallpad Controller with RS485",
  "version": "1.1.1",
  "slug": "kocom_wallpad",
  "description": "Kocom Wallpad Controller for Homeassistant",
  "arch": [
    "armhf",
    "armv7",
    "aarch64",
    "amd64",
    "i386"
  ],
  "url": "https://github.com/HAKorea/addons",
  "startup": "application",
  "boot": "auto",
  "uart": true,
  "map": [
    "share:rw"
  ],
  "options": {
    "RS485": {
      "type": "Socket"
    },
    "Socket": {
      "server": "192.168.0.29",
      "port": 8899
    },
    "SocketDevice": {
      "device": "kocom"
    },
    "Serial": {
      "port1": "/dev/ttyUSB0"
    },
    "SerialDevice": {
      "port1": "kocom"
    },
    "MQTT": {
      "anonymous": false,
      "server": "192.168.0.30",
      "username": "mqtt",
      "password": "135asdssas"
    },
    "Wallpad": {
      "light": true,
      "plug": false,
      "thermostat": true,
      "fan": true,
      "gas": false,
      "elevator": true
    },
    "Advanced": {
      "INIT_TEMP": 20,
      "SCAN_INTERVAL": 120,
      "SCANNING_INTERVAL": 0.8,
      "DEFAULT_SPEED" : "medium",
      "LOGLEVEL" : "info"
    },
    "KOCOM_LIGHT_SIZE": [
      {
        "name": "livingroom",
        "number": 2
      },
      {
        "name": "bedroom",
        "number": 2
      },
      {
        "name": "room1",
        "number": 1
      },
      {
        "name": "room2",
        "number": 1
      },
      {
        "name": "kitchen",
        "number": 2
      }
    ],
    "KOCOM_PLUG_SIZE": [
      {
        "name": "livingroom",
        "number": 0
      },
      {
        "name": "bedroom",
        "number": 0
      },
      {
        "name": "room1",
        "number": 0
      },
      {
        "name": "room2",
        "number": 0
      },
      {
        "name": "kitchen",
        "number": 0
      }
    ],
    "KOCOM_ROOM": [
      "livingroom",
      "bedroom",
      "room1",
      "room2",
      "kitchen"
    ],
    "KOCOM_ROOM_THERMOSTAT": [
      "livingroom",
      "bedroom",
      "room1",
      "room2"
    ]
  },
  "schema": {
    "RS485": {
      "type": "list(Serial|Socket)"
    },
    "Socket": {
      "server": "str?",
      "port": "int?"
    },
    "SocketDevice": {
      "device": "str?"
    },
    "Serial": {
      "port1": "str?",
      "port2": "str?",
      "port3": "str?"
    },
    "SerialDevice": {
      "port1": "str?",
      "port2": "str?",
      "port3": "str?"
    },
    "MQTT": {
      "anonymous": "bool",
      "server": "str",
      "username": "str",
      "password": "str"
    },
    "Wallpad": {
      "light": "bool",
      "plug": "bool",
      "thermostat": "bool",
      "fan": "bool",
      "gas": "bool",
      "elevator": "bool"
    },
    "Advanced": {
      "INIT_TEMP": "int(10,30)",
      "SCAN_INTERVAL": "int(100,1000)",
      "SCANNING_INTERVAL": "float",
      "DEFAULT_SPEED" : "str",
      "LOGLEVEL" : "str"
    },
    "KOCOM_LIGHT_SIZE": [
      {
        "name": "str?",
        "number": "int?"
      }
    ],
    "KOCOM_PLUG_SIZE": [
      {
        "name": "str?",
        "number": "int?"
      }
    ],
    "KOCOM_ROOM": [
      "str?"
    ],
    "KOCOM_ROOM_THERMOSTAT": [
      "str?"
    ]
  }
}
